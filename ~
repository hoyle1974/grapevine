FROM golang:1.20-bullseye as base

RUN adduser \
  --disabled-password \
  --gecos "" \
  --home "/nonexistent" \
  --shell "/sbin/nologin" \
  --no-create-home \
  --uid 65532 \
  small-user

WORKDIR /app
COPY . ./
WORKDIR /app/example/tictactoe

RUN go mod download
RUN go mod verify
RUN CGO_ENABLED=0 GOOS=linux go build -o /cmd

FROM gcr.io/distroless/static-debian11

COPY --from=base /cmd .

USER small-user:small-user
